        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QLRapChieuPhim.TimKiem"
        mc:Ignorable="d"
        Title="TKPhim" Height="450" Width="800">
