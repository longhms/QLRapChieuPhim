        <TextBlock Text="Tìm Kiếm" Foreground="White" FontSize="24" HorizontalAlignment="Center" Margin="0,10,0,337" />
        <Grid x:Name="GrdMain" Margin="10,64,10,10" Background="White">
            <TextBox x:Name="txtFindAll" HorizontalAlignment="Left" Margin="22,27,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="245" Height="28"/>
            <Button x:Name="btnTim" Content="Tìm Kiếm" HorizontalAlignment="Left" Margin="272,23,0,0" VerticalAlignment="Top" Click="btnTim_Click"/>
            <DataGrid x:Name="dtgTKPhim" Margin="0,75,0,0" IsReadOnly="True"/>
        </Grid>

    </Grid>
</Window>
