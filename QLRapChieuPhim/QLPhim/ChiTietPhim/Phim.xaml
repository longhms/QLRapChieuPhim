<Window x:Class="QLRapChieuPhim.QLPhim.ChiTietPhim.Phim"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QLRapChieuPhim.QLPhim.ChiTietPhim"
        mc:Ignorable="d"
        Title="Phim" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid x:Name="GrdBoder" Background="#FF030B2B" >
            <TextBlock Text="Danh Sách Phim" Foreground="White" FontSize="24" HorizontalAlignment="Center" Margin="0,10,0,337" />
            <Grid x:Name="GrdMain" Margin="10,64,10,10" Background="White">
                <TextBox x:Name="txtFind" HorizontalAlignment="Left" Margin="10,14,0,0" TextWrapping="Wrap" Text="Tìm kiếm" VerticalAlignment="Top" Width="214"/>
                <Button x:Name="btnThem"  HorizontalAlignment="Left" Margin="242,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.013,0.001" Click="btnThem_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock>Thêm</TextBlock>
                    </StackPanel>
                </Button>
                <DataGrid x:Name="dgPhim" AutoGenerateColumns="False" Margin="10,86,10,10" CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Mã phim" Binding="{Binding maPhim}" />
                        <DataGridTextColumn Header="Tên phim" Binding="{Binding tenPhim}" />
                        <DataGridTextColumn Header="Mã quốc gia sản xuất" Binding="{Binding maQGSanXuat}" />
                        <DataGridTextColumn Header="Mã hãng sản xuất" Binding="{Binding maHangSX}" />
                        <DataGridTextColumn Header="Đạo diễn" Binding="{Binding daoDien}" />
                        <DataGridTextColumn Header="Mã thể loại" Binding="{Binding maTheloai}" />
                        <DataGridTextColumn Header="Ngày khởi chiếu" Binding="{Binding ngayKhoiChieu}" />
                        <DataGridTextColumn Header="Ngày kết thúc" Binding="{Binding ngayKetThuc}" />
                        <DataGridTextColumn Header="Nữ DVC" Binding="{Binding nuDVC}" />
                        <DataGridTextColumn Header="Năm DVC" Binding="{Binding namDVC}" />
                        <DataGridTextColumn Header="Nội dung chính" Binding="{Binding noiDungC}" />
                        <DataGridTextColumn Header="Tổng chi phí" Binding="{Binding tongChiPhi}" />
                        <DataGridTextColumn Header="Tổng thu" Binding="{Binding tongThu}" />
                        <DataGridTemplateColumn Header="Sửa">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button x:Name="btnEdit" Content="Sửa" Click="btnSua_Click"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Xóa">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button x:Name="btnDelete" Content="Xóa" Click="btnXoa_Click"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

            </Grid>
        </Grid>
     </Grid>   
</Window>
